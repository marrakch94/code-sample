{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "mapRoot": "./",
    //"module": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "esnext",
    "allowJs":true,
    "typeRoots": [
      "../node_modules/@types"
    ],
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/app/layouts/admin-layout/admin-layout.module.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
